<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserShowReservedTripDetails">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    <TextView
        android:id="@+id/TripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TripName"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/TripNameEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:editable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:enabled="false"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />
    <TextView
        android:id="@+id/SourceTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SourceTrip"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/SourceTripEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:clickable="false"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:editable="false" />
    <TextView
        android:id="@+id/destinationTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destinationTrip"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/destinationTripEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="none"
        android:editable="false"
        android:enabled="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/TimeTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/TimeTrip"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/TimeTripEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:editable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:enabled="false"
        android:ems="10"
        android:inputType="none"
        android:paddingLeft="20dp"
        />
    <TextView
        android:id="@+id/numOfSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numOfSeats"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/numOfSeatsEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:editable="false"
        android:enabled="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numOfSeats"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/dayEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:editable="false"
        android:enabled="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/costEDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:editable="false"
        android:enabled="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="20dp"/>
    </GridLayout>


</ScrollView>